<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context="edu.cnm.deepdive.checkyourself.InputFragment">

  <LinearLayout
    android:id="@+id/edit_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent">

    <TableLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_gravity="center_vertical"
          android:labelFor="@+id/income_edit"
          android:text="Monthly Income"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:textSize="20dp"/>

        <LinearLayout
          android:layout_column="1"
          android:paddingStart="5dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="$"/>

        <EditText
          android:id="@+id/income_edit"
          android:inputType="numberDecimal"
          android:hint="Monthly income"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/border"
          android:paddingStart="5dp"/>

        </LinearLayout>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:labelFor="@+id/family_edit"
          android:text="Family Size"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_column="0"
          android:layout_gravity="center_vertical"
          android:textSize="20dp"/>

        <LinearLayout
          android:layout_column="1"
          android:paddingStart="13dp"
          >

        <EditText
          android:id="@+id/family_edit"
          android:inputType="number"
          android:hint="Size of family"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/border"
          android:paddingStart="5dp"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="People"/>

        </LinearLayout>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:labelFor="@+id/savings_edit"
          android:text="Percent Savings"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_column="0"
          android:textSize="20dp"/>

        <LinearLayout
          android:layout_column="1"
          android:paddingStart="13dp">

        <EditText
          android:id="@+id/savings_edit"
          android:inputType="number"
          android:hint="Percent to save"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/border"
          android:paddingStart="5dp"/>

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="%"/>

        </LinearLayout>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:labelFor="@+id/monthly_edit"
          android:text="Monthly Payment Total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_column="0"
          android:textSize="20dp"/>

        <LinearLayout
          android:layout_column="1"
          android:paddingStart="5dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="$"/>

        <EditText
          android:id="@+id/monthly_edit"
          android:inputType="numberDecimal"
          android:hint="Monthly payments Total"
          android:layout_width="125dp"
          android:layout_height="30dp"
          android:background="@drawable/border"
          android:paddingStart="5dp"/>

        </LinearLayout>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Spending Total: "
          android:textSize="20dp"
          android:paddingTop="20dp"/>

      <TextView
        android:id="@+id/total_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:paddingTop="20dp"/>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Food Total: "
          android:textSize="20dp"
          android:paddingTop="20dp"/>

        <TextView
          android:id="@+id/food_total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:paddingTop="20dp"/>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Entertainment Total: "
          android:textSize="20dp"
          android:paddingTop="20dp"/>

        <TextView
          android:id="@+id/enter_total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:paddingTop="20dp"/>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Miscellaneous Total: "
          android:textSize="20dp"
          android:paddingTop="20dp"/>

        <TextView
          android:id="@+id/misc_total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:paddingTop="20dp"/>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

        <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:text="Amount to Save: "
          android:textSize="20dp"
          android:paddingTop="20dp"/>

        <TextView
          android:id="@+id/savings_total"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20dp"
          android:paddingTop="20dp"/>

      </TableRow>

      <TableRow
        android:paddingStart="10dp">

      <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/total_edit"
        android:text="Update"/>

      </TableRow>
    </TableLayout>
  </LinearLayout>
</android.support.constraint.ConstraintLayout>
