<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableRow
      android:paddingStart="10dp">

      <TextView
        android:labelFor="@+id/tag_spinner"
        android:text="Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <Spinner
        android:id="@+id/tag_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

    </TableRow>

    <TableRow
      android:paddingStart="10dp">

      <TextView
        android:labelFor="@+id/amount_edit"
        android:text="Amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <EditText
        android:id="@+id/amount_edit"
        android:inputType="numberDecimal"
        android:hint="amount of purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"/>

    </TableRow>

    <TableRow
      android:paddingStart="10dp">

      <TextView
        android:labelFor="@+id/info_edit"
        android:text="Info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

      <EditText
        android:id="@+id/info_edit"
        android:inputType="text"
        android:hint="Info on purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/A"/>

    </TableRow>

    <TableRow>
      <Button
        android:id="@+id/spending_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"/>
    </TableRow>

  </TableLayout>
</LinearLayout>